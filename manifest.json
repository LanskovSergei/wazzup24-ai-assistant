{
  "manifest_version": 3,
  "name": "Wazzup24 AI Assistant",
  "version": "1.0.0",
  "description": "AI-помощник для менеджеров в Wazzup24. Генерирует варианты ответов на сообщения клиентов.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://app.wazzup24.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.wazzup24.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://app.wazzup24.com/*"]
    }
  ]
}
